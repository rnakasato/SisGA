<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.password">rnakasato</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/sisga</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="show_sql">false</property>
        
        <mapping resource="sisga_orm.xml"></mapping>
        <mapping resource="product_orm.xml"></mapping>
        <mapping resource="expense_orm.xml"></mapping>
        <mapping resource="user_orm.xml"></mapping>
        <mapping resource="customer_orm.xml"></mapping>
        <mapping resource="employee_orm.xml"></mapping>
        <mapping resource="phone_orm.xml"></mapping>
        <mapping resource="provider_orm.xml"></mapping>
    </session-factory>
</hibernate-configuration>