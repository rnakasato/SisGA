<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.sisga.domain.adress.City" table="TB_CITY">
        <id name="id" column="IDCITY">
            <generator class="sequence">
        		<param name="sequence_name">SQ_CITY</param>
        	</generator>            
        </id>
        <property name="uf" column="UF"/>
        <property name="name" column="NAME"/>
        
        <many-to-one name="state" column="IDSTATE" class="com.sisga.domain.adress.State" not-null="true" />
    </class>    
    
    <class name="com.sisga.domain.communication.PhoneType" table="TB_PHONETYPE">
        <id name="id" column="IDPHONETYPE">
            <generator class="sequence">
        		<param name="sequence_name">SQ_PHONETYPE</param>
        	</generator>            
        </id>
        
        <property name="code" column="CODE"/>
        <property name="description" column="DESCRIPTION"/>
        
     </class>
    
	<class name="com.sisga.domain.communication.Telephone" table="TB_PHONE">
        <id name="id" column="IDPHONE">
            <generator class="sequence">
        		<param name="sequence_name">SQ_PHONE</param>
        	</generator>            
        </id>
        
        <property name="ddd" column="DDD"/>
        <property name="pnumber" column="PNUMBER"/>
        
        <many-to-one name="customer" column="IDCUSTOMER" class="com.sisga.domain.customer.Customer" not-null="true" />
        <many-to-one name="employee" column="IDEMPLOYEE" class="com.sisga.domain.employee.Employee" not-null="true" />
        <many-to-one name="provider" column="IDPROVIDER" class="com.sisga.domain.provider.Provider" not-null="true" />
        <many-to-one name="user" column="IDUSER" class="com.sisga.domain.user.User" not-null="true" />
        <many-to-one name="phoneType" column="IDPHONETYPE" class="com.sisga.domain.communication.PhoneType" not-null="true" />
            
    </class> 
    
    <class name="com.sisga.domain.employee.Employee" table="TB_Employee">
        <id name="id" column="IDEMPLOYEE">
            <generator class="sequence">
        		<param name="sequence_name">SQ_EMPLOYEE</param>
        	</generator>            
        </id>
        
        <property name="name" column="FIRSTNAME"/>
        <property name="email" column="EMAIL"/>
        <property name="active" column="ACTIVE"/>
        <property name="insertDate" column="INSERTDATE"/>
        <property name="neighborhood" column="NEIGHBORHOOD"/>
        <property name="number" column="ANUMBER"/>
        <property name="workcardNumber" column="WORKCARDNUMBER"/>
        <property name="employmentDate" column="EMPLOYMENTDATE"/>
        <property name="salary" column="SALARY"/>
        
        
        <many-to-one name="city" column="IDCITY" class="com.sisga.domain.adress.City" not-null="true" />
    	<bag name="telephone" table="TB_PHONE" >
			<key column="IDEMPLOYEE" />
			<one-to-many class="com.sisga.domain.communication.Phone" />
		</bag>
		<bag name="cellphone" table="TB_PHONE" >
			<key column="IDEMPLOYEE" />
			<one-to-many class="com.sisga.domain.communication.Phone" />
		</bag> 
    </class>  
    
    <class name="com.sisga.domain.employee.EmployeeOperation" table="TB_EMPLOYEE_OPERATION">
        <id name="id" column="IDOPERATION">
            <generator class="sequence">
        		<param name="sequence_name">SQ_EMPLOYEE_OPERATION</param>
        	</generator>            
        </id>
        <property name="code" column="CODE"/>
        <property name="description" column="DESCRIPTION"/>       
    </class>  
    
    <class name="com.sisga.domain.customer.EmployeeHistory" table="TB_EMPLOYEE_HISTORY">
        <id name="id" column="IDEMPLOYEEHISTORY">
            <generator class="sequence">
        		<param name="sequence_name">SQ_EMPLOYEE_HISTORY</param>
        	</generator>            
        </id>
        <property name="name" column="FIRSTNAME"/>
        <property name="email" column="EMAIL"/>
        <property name="active" column="ACTIVE"/>
        <property name="insertDate" column="INSERTDATE"/>
        <property name="neighborhood" column="NEIGHBORHOOD"/>
        <property name="number" column="ANUMBER"/>
        <property name="workcardNumber" column="WORKCARDNUMBER"/>
        <property name="employmentDate" column="EMPLOYMENTDATE"/>
        <property name="resignationDate" column="RESIGNATIONDATE"/>
        <property name="salary" column="SALARY"/>
            
        <many-to-one name="city" column="IDCITY" class="com.sisga.domain.adress.City" not-null="true" />
        <many-to-one name="employee" column="IDEMPLOYEE" class="com.sisga.domain.employee.Employee" not-null="true" />
        <many-to-one name="employeeOperation" column="IDOPERATION" class="com.sisga.domain.employee.EmployeeOperation" not-null="true" />
     </class> 
    
    
</hibernate-mapping>