<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>


	<class name="com.sisga.domain.user.UserType" table="TB_USER_TYPE">
		<id name="id" column="IDUSERTYPE">
			<generator class="sequence">
				<param name="sequence_name">SQ_USER_TYPE</param>
			</generator>
		</id>
		<property name="code" column="CODE" />
		<property name="description" column="DESCRIPTION" />
	</class>


	<class name="com.sisga.domain.user.User" table="TB_USER">
		<id name="id" column="IDUSER">
			<generator class="sequence">
				<param name="sequence_name">SQ_USER</param>
			</generator>
		</id>
		<property name="active" column="ACTIVE" />
		<property name="username" column="USERNAME" />
		<property name="password" column="PASSWORD" />
		<property name="cpf" column="CPF" />
		<property name="rg" column="RG" />
		<property name="email" column="email" />
		<property name="insertDate" column="INSERTDATE" />
		<property name="firstName" column="FIRSTNAME" />
		<property name="lastName" column="LASTNAME" />
		<many-to-one name="userType" column="IDUSERTYPE"
			class="com.sisga.domain.user.UserType" not-null="true" />

		<component name="address" class="com.sisga.domain.address.Address">
			<property name="neighborhood" type="string">
				<column name="NEIGHBORHOOD" />
			</property>
			<property name="number">
				<column name="ANUMERIC" />
			</property>
			<many-to-one name="city" column="IDCITY"
				class="com.sisga.domain.address.City" not-null="true" lazy="false"
				cascade="save-update" />
		</component>

		<bag name="telephones" table="TB_PHONE" inverse="true" lazy="false"
			cascade="save-update">
			<key column="IDEMPLOYEE" />
			<one-to-many class="com.sisga.domain.communication.Telephone" />
		</bag>

	</class>

	<class name="com.sisga.domain.user.UserOperation" table="TB_USER_OPERATION">
		<id name="id" column="IDOPERATION">
			<generator class="sequence">
				<param name="sequence_name">SQ_USER_OPERATION</param>
			</generator>
		</id>
		<property name="code" column="CODE" />
		<property name="description" column="DESCRIPTION" />
	</class>


	<class name="com.sisga.domain.user.UserHistory" table="TB_USER_HISTORY">
		<id name="id" column="IDUSERHISTORY">
			<generator class="sequence">
				<param name="sequence_name">SQ_USER_HISTORY</param>
			</generator>
		</id>

		<property name="username" column="USERNAME" />
		<property name="firstName" column="FIRSTNAME" />
		<property name="lastName" column="LASTNAME" />
		<property name="email" column="EMAIL" />
		<property name="active" column="ACTIVE" />
		<property name="cpf" column="CPF" />
		<property name="rg" column="RG" />
		<property name="isFirstLogin" column="FIRSTLOGIN" />
		<property name="insertDate" column="INSERTDATE" />
		<property name="updateDate" column="UPDATEDATE" />

		<component name="address" class="com.sisga.domain.address.Address">
			<property name="neighborhood" type="string">
				<column name="NEIGHBORHOOD" />
			</property>
			<property name="number">
				<column name="ANUMERIC" />
			</property>
			<many-to-one name="city" column="IDCITY"
				class="com.sisga.domain.address.City" not-null="true" lazy="false"
				cascade="save-update" />
		</component>

		<many-to-one name="user" column="IDUSER"
			class="com.sisga.domain.user.User" not-null="true" />

		<many-to-one name="userOparation" column="IDOPERATION"
			class="com.sisga.domain.user.UserOperation" not-null="true" />


	</class>




</hibernate-mapping>